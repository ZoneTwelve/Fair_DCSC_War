<script>
var pwd = '';
var time = 0;
var w = window.innerWidth/4,h = window.innerHeight/4;
setInterval(function(){
	var x = w * Math.cos((time/360)*(Math.PI*2));
	var y = h * Math.sin((time/360)*(Math.PI*2));
	document.getElementById("pass").style.transform = "translate("+x+"px,"+y+"px)";
	document.getElementById("title-img-circle").style.transform = "translate("+x+"px,"+y+"px)";
	time++;
},5)

window.onload = function(){
	setup();
}
function setup(){
	document.getElementById("submit").onclick = function(){
		checkPassword();
	}
}

function checkPassword(){
	pwd = document.getElementById("pass").value;
	location.href = "?level=5&&pass="+pwd;
}
</script>
